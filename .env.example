# 데이터베이스 설정
DATABASE_URL=sqlite:///data/hananavilite.db

# FAISS 벡터 검색 설정
FAISS_DIMENSION=1024
FAISS_INDEX_PATH=models/faiss_index

# LLM 설정 (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL=gemma3:12b
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.1

# 임베딩 모델 설정
EMBEDDING_MODEL=dragonkue/snowflake-arctic-embed-l-v2.0-ko
EMBEDDING_BATCH_SIZE=32

# 하이브리드 검색 설정
HYBRID_SEARCH_TOP_K=20
RRF_K=60
VECTOR_WEIGHT=0.6
IR_WEIGHT=0.4

# API 서버 설정
API_HOST=0.0.0.0
API_PORT=8001
API_TITLE=HanaNaviLite API
API_VERSION=1.0.0

# 파일 업로드 설정
MAX_FILE_SIZE_MB=100
UPLOAD_DIR=uploads

# 시스템 리소스 제한
LOG_LEVEL=INFO
MAX_MEMORY_GB=25

# 보안 설정
CORS_ORIGINS=["*"]
